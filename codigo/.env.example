# Configuración de Variables de Entorno
# ======================================
# Copia este archivo a .env y configura tus credenciales de RDS MySQL

# Base de Datos de Contenido
CONTENIDO_DB_USER=admin
CONTENIDO_DB_PASSWORD=tu_password_aqui
CONTENIDO_DB_HOST=contenido-rds.xxxx.us-east-1.rds.amazonaws.com
CONTENIDO_DB_PORT=3306
CONTENIDO_DB_NAME=contenido_db

# Base de Datos de Usuarios
USUARIOS_DB_USER=admin
USUARIOS_DB_PASSWORD=tu_password_aqui
USUARIOS_DB_HOST=usuarios-rds.xxxx.us-east-1.rds.amazonaws.com
USUARIOS_DB_PORT=3306
USUARIOS_DB_NAME=usuarios_db

# Base de Datos de Evaluaciones
EVALUACIONES_DB_USER=admin
EVALUACIONES_DB_PASSWORD=tu_password_aqui
EVALUACIONES_DB_HOST=evaluaciones-rds.xxxx.us-east-1.rds.amazonaws.com
EVALUACIONES_DB_PORT=3306
EVALUACIONES_DB_NAME=evaluaciones_db

# Configuración de AWS S3 (para archivos multimedia)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_S3_BUCKET_NAME=libro-virtual-assets
AWS_REGION=us-east-1

# Configuración de la Aplicación
APP_ENV=development
APP_SECRET_KEY=tu_clave_secreta_para_jwt
DEBUG=True

# Configuración de la API
API_HOST=0.0.0.0
API_PORT=8000

# URL de conexión completa (alternativa)
DATABASE_URL_CONTENIDO=mysql+pymysql://admin:password@host:3306/contenido_db
